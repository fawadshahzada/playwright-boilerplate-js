{
  "name": "playwright-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "rimraf allure-results && rimraf allure-report && npx cucumber-js",
    "allure:generate": "allure generate ./allure-results --output ./allure-report",
    "allure:open": "allure open ./allure-report",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css,html,js}\" ",
    "only": "npx cucumber-js --tags @only",
    "smoke": "npx cucumber-js --tags @smoke",
    "test:parallel": "cucumber-js --parallel=2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.46.1",
    "@types/node": "^22.2.0",
    "allure-commandline": "^2.30.0",
    "allure-cucumberjs": "^3.0.0-beta.10",
    "allure-js-commons": "^3.0.0-beta.10",
    "allure-playwright": "^3.0.0-beta.9",
    "cucumber-playwright": "^1.2.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "3.3.3",
    "prettier-eslint": "^16.3.0",
    "rimraf": "^5.0.10"
  }
}